{
  "name": "wce-vscode",
  "displayName": "WCE Syntax Support",
  "description": "WCE (WorldCom Emulator) extension support ",
  "publisher": "xackery",
  "version": "0.0.3",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wce-vscode.convert",
        "title": "Quail Convert"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WCE Configuration",
      "properties": {
        "wce-vscode.quailPath": {
          "type": "string",
          "default": "",
          "description": "Path to Quail"
        },
        "wce-vscode.convertTargetPath": {
          "type": "string",
          "default": "",
          "description": "Path to convert file to (Suggested to set in a workspace inside a .quail folder)"
        },
        "wce-vscode.convertOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run Convert on save"
        }
      }
    },
    "languages": [
      {
        "id": "wce",
        "aliases": [
          "WCE",
          "wce"
        ],
        "extensions": [
          ".wce"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xackery/wce-vscode.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
